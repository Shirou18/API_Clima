<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gris"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText_Ciudad"
        android:layout_width="213dp"
        android:layout_height="78dp"
        android:layout_marginBottom="56dp"
        android:fontFamily="@font/akaya_telivigala"
        android:hint="Escribe el nombre de la ciudad"
        android:minHeight="48dp"
        android:padding="12dp"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView_ResultadoClima"
        app:layout_constraintEnd_toStartOf="@+id/btn_Buscar"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_Buscar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:minHeight="48dp"
        android:padding="12dp"
        android:text="Buscar Clima"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView_ResultadoClima"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView_ResultadoClima"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="416dp"
        android:fontFamily="@font/akaya_telivigala"
        android:paddingTop="16dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
